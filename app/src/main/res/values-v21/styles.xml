<resources>>
    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:icon">@color/iconColor</item>
        <!--<item name="android:windowLightStatusBar">@color/ligthPrimaryColor</item>-->
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:colorActivatedHighlight">@color/ligthPrimaryColor</item>

    </style>
    <style name="ButtonNormal">
        <item name="android:textColor">@color/iconColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorAccent</item>

        <item name="colorControlNormal">@color/ligthPrimaryColor</item>
        <item name="colorControlActivated">@color/iconColor</item>
        <item name="colorControlHighlight">@color/iconColor</item>
        <item name="android:textColorHint">@color/ligthPrimaryColor</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>sdfs

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/iconColor</item>
        <item name="android:icon">@color/iconColor</item>
        <!--<item name="android:windowLightStatusBar">@color/ligthPrimaryColor</item>-->
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:colorActivatedHighlight">@color/ligthPrimaryColor</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/iconColor</item>
        <item name="android:textColorPrimary">@color/ligthPrimaryColor</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
